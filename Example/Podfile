use_frameworks!
inhibit_all_warnings!

target 'SDWebImageHEIFCoder_Example' do
  pod 'SDWebImageHEIFCoder', :path => '../'
  pod 'SDWebImage/Core', :git => 'https://github.com/rs/SDWebImage.git', :branch => '5.x'

  target 'SDWebImageHEIFCoder_Tests' do
    inherit! :search_paths

    
  end
end

post_install do |installer|

  installer.pods_project.targets.each do |target|
    if target.name == "SDWebImageHEIFCoder"
      target.build_configurations.each do |config|
        config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)', '${SRCROOT}/../../Vendors/include']
      end
    end
  end
end